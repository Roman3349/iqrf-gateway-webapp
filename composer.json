{
	"name": "iqrfsdk/iqrf-gateway-webapp",
	"description": "IQRF Gateway Daemon web application",
	"version": "2.0.0-dev",
	"type": "project",
	"keywords": ["nette", "iqrf", "iqrf-daemon"],
	"homepage": "https://github.com/iqrfsdk/iqrf-gateway-webapp",
	"license": "Apache-2.0",
	"authors": [
		{
			"name": "Roman Ondráček",
			"homepage": "https://romanondracek.cz/",
			"email": "roman.ondracek@iqrf.com",
			"role": "developer"
		}
	],
	"require": {
		"php": ">=7.0.0",
		"nette/application": "^2.4",
		"nette/bootstrap": "^2.4",
		"nette/caching": "^2.5",
		"nette/database": "^2.4",
		"nette/di": "^2.4",
		"nette/finder": "^2.4",
		"nette/forms": "^2.4",
		"nette/http": "^2.4",
		"nette/mail": "^2.4",
		"nette/neon": "^2.4",
		"nette/php-generator": "^2.6",
		"nette/robot-loader": "^3.0",
		"nette/safe-stream": "^2.3",
		"nette/security": "^2.4",
		"nette/utils": "^2.5",
		"latte/latte": "^2.4",
		"tracy/tracy": "^2.5",
		"instante/bootstrap-3-renderer": "^2.0",
		"guzzlehttp/guzzle": "^6.3",
		"kdyby/monolog": "^1.3",
		"sentry/sentry": "^1.9",
		"kdyby/translation": "^2.5",
		"justinrainbow/json-schema": "^5.2",
		"ratchet/pawl": "^0.3.2"
	},
	"require-dev": {
		"nette/tester": "^2.0",
		"mockery/mockery": "^1.1",
		"phpstan/phpstan": "^0.9 || ^0.10",
		"phpstan/phpstan-nette": "^0.9 || ^0.10",
		"phpstan/phpstan-strict-rules": "^0.9 || ^0.10"
	},
	"autoload-dev": {
		"classmap": ["app", "tests"]
	},
	"support": {
		"email": "roman.ondracek@iqrf.com",
		"issues": "https://github.com/iqrfsdk/iqrf-gateway-webapp/issues",
		"source": "https://github.com/iqrfsdk/iqrf-gateway-webapp"
	},
	"archive": {
		"exclude": [
			"/docker/",
			"/install/"
		]
	},
	"scripts": {
		"install-cs": "composer create-project nette/code-checker temp/code-checker --no-interaction",
		"check-cs": "php temp/code-checker/code-checker -l --short-arrays -i \"tests/model/data/macros-ascii.expected\" -i \"docs/\" -i \"tests/configuration-test/\"",
		"fix-cs": "php temp/code-checker/code-checker -f -l --short-arrays -i \"tests/model/data/macros-ascii.expected\" -i \"docs/\" -i \"tests/configuration-test/\"",
		"phpstan": "vendor/bin/phpstan analyse -l 1 app tests"
	},
	"minimum-stability": "alpha"
}
