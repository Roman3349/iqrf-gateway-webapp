{
	"name": "iqrf/iqrf-gateway-webapp",
	"description": "IQRF Gateway Daemon web application",
	"type": "project",
	"keywords": [
		"nette",
		"iqrf",
		"iqrf-daemon",
		"iqrf-gateway",
		"iqrf-gateway-daemon"
	],
	"homepage": "https://gitlab.iqrf.org/open-source/iqrf-gateway-webapp",
	"license": "Apache-2.0",
	"authors": [
		{
			"name": "Roman Ondráček",
			"homepage": "https://romanondracek.cz/",
			"email": "roman.ondracek@iqrf.com",
			"role": "developer"
		}
	],
	"require": {
		"php": ">=7.1.0",
		"ext-json": "*",
		"ext-openssl": "*",
		"ext-posix": "*",
		"ext-zip": "*",
		"nette/application": "^2.4",
		"nette/bootstrap": "^2.4",
		"nette/caching": "^2.5",
		"nette/database": "^2.4",
		"nette/di": "^2.4",
		"nette/finder": "3.0.0-RC1 as 2.5.0",
		"nette/forms": "^2.4",
		"nette/http": "^2.4",
		"nette/neon": "3.0.0 as 2.4.3",
		"nette/php-generator": "^3.2",
		"nette/robot-loader": "^3.0",
		"nette/safe-stream": "^2.4",
		"nette/security": "^2.4",
		"nette/utils": "^2.5",
		"latte/latte": "^2.5",
		"tracy/tracy": "^2.6",
		"instante/bootstrap-3-renderer": "^2.0",
		"sentry/sentry": "^1.10",
		"kdyby/translation": "^2.5",
		"justinrainbow/json-schema": "^5.2",
		"ratchet/pawl": "^0.3",
		"ublaboo/datagrid": "^5.7",
		"contributte/guzzlette": "2.1.x-dev",
		"contributte/console": "^0.5",
		"contributte/console-extra": "^0.4",
		"contributte/monolog": "^0.1",
		"iqrf/iqrf-ide-macros-parser": "^1.1",
		"symfony/process": "^4.2"
	},
	"require-dev": {
		"nette/tester": "^2.2",
		"mockery/mockery": "^1.1",
		"phpstan/phpstan": "^0.11",
		"phpstan/phpstan-nette": "^0.11",
		"phpstan/phpstan-strict-rules": "^0.11",
		"phpstan/phpstan-deprecation-rules": "^0.11",
		"phpstan/phpstan-mockery": "^0.11",
		"ninjify/qa": "^0.9"
	},
	"autoload-dev": {
		"classmap": [
			"app",
			"tests"
		]
	},
	"support": {
		"email": "roman.ondracek@iqrf.com",
		"issues": "https://gitlab.iqrf.org/open-source/iqrf-gateway-webapp/issues",
		"source": "https://gitlab.iqrf.org/open-source/iqrf-gateway-webapp"
	},
	"archive": {
		"exclude": [
			"/docker/",
			"/docs/",
			"/debian/",
			"/install/"
		]
	},
	"scripts": {
		"coverage": "vendor/bin/tester -p phpdbg -c ./tests/php.ini --coverage ./coverage.html --coverage-src ./app ./tests",
		"test": "vendor/bin/tester -p phpdbg -c ./tests/php.ini ./tests",
		"install-cs": "composer create-project nette/code-checker temp/code-checker --no-interaction",
		"check-cs": "php temp/code-checker/code-checker -l --no-progress --strict-types -i \"coverage.*\" -i \"docs/\" -i \"tests/temp/\" -i \"www/dist/\"",
		"fix-cs": "php temp/code-checker/code-checker -f -l --no-progress --strict-types -i \"coverage.*\" -i \"docs/\" -i \"tests/temp/\" -i \"www/dist/\"",
		"phpstan": "vendor/bin/phpstan analyse -c phpstan.neon -l 4 app bin tests",
		"qa": [
			"linter app bin tests",
			"codesniffer app bin tests"
		]
	}
}
