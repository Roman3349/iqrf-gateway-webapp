{
	"name": "iqrf/iqrf-gateway-webapp",
	"description": "IQRF Gateway Daemon web application",
	"type": "project",
	"keywords": [
		"nette",
		"iqrf",
		"iqrf-daemon",
		"iqrf-gateway",
		"iqrf-gateway-daemon"
	],
	"homepage": "https://gitlab.iqrf.org/open-source/iqrf-gateway-webapp",
	"license": "Apache-2.0",
	"authors": [
		{
			"name": "Roman Ondráček",
			"homepage": "https://romanondracek.cz/",
			"email": "roman.ondracek@iqrf.com",
			"role": "developer"
		}
	],
	"require": {
		"php": ">=7.1.0",
		"ext-json": "*",
		"ext-openssl": "*",
		"ext-posix": "*",
		"ext-zip": "*",
		"nette/application": "^2.4",
		"nette/bootstrap": "^2.4",
		"nette/caching": "^2.5",
		"nette/database": "^2.4",
		"nette/di": "^2.4",
		"nette/finder": "^2.4",
		"nette/forms": "^2.4",
		"nette/http": "^2.4",
		"nette/mail": "^2.4",
		"nette/neon": "^2.4",
		"nette/php-generator": "^2.6",
		"nette/robot-loader": "^3.0",
		"nette/safe-stream": "^2.3",
		"nette/security": "^2.4",
		"nette/utils": "^2.5",
		"latte/latte": "^2.4",
		"tracy/tracy": "^2.5",
		"instante/bootstrap-3-renderer": "^2.0",
		"guzzlehttp/guzzle": "^6.3",
		"kdyby/monolog": "^1.3",
		"sentry/sentry": "^1.9",
		"kdyby/translation": "^2.5",
		"symfony/translation": "~4.1.0",
		"justinrainbow/json-schema": "^5.2",
		"ratchet/pawl": "^0.3.2",
		"ublaboo/datagrid": "^5.6",
		"contributte/guzzlette": "^2.0",
		"contributte/console": "^0.5.0"
	},
	"require-dev": {
		"nette/tester": "^2.0",
		"mockery/mockery": "^1.1",
		"phpstan/phpstan": "^0.10",
		"phpstan/phpstan-nette": "^0.10",
		"phpstan/phpstan-strict-rules": "^0.10",
		"phpstan/phpstan-mockery": "^0.10.2"
	},
	"autoload-dev": {
		"classmap": [
			"app",
			"tests"
		]
	},
	"support": {
		"email": "roman.ondracek@iqrf.com",
		"issues": "https://gitlab.iqrf.org/open-source/iqrf-gateway-webapp/issues",
		"source": "https://gitlab.iqrf.org/open-source/iqrf-gateway-webapp"
	},
	"archive": {
		"exclude": [
			"/docker/",
			"/docs/",
			"/debian/",
			"/install/"
		]
	},
	"scripts": {
		"install-cs": "composer create-project nette/code-checker temp/code-checker --no-interaction",
		"check-cs": "php temp/code-checker/code-checker -l --no-progress --strict-types -i \"tests/data/macros/macros-ascii.expected\" -i \"docs/\" -i \"tests/temp/\"",
		"fix-cs": "php temp/code-checker/code-checker -f -l --no-progress --strict-types -i \"tests/data/macros/macros-ascii.expected\" -i \"docs/\" -i \"tests/temp/\"",
		"phpstan": "vendor/bin/phpstan analyse -c phpstan.neon -l 4 app tests"
	}
}
