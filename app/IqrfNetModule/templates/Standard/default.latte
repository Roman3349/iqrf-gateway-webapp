{block title}{_iqrfnet.standard.title}{/block}
{block content}
<div class='col-sm-6'>
	<div class='box box-primary'>
		<header class='box-header with-border'>
			<h2 class='box-title'>{_iqrfnet.standard.binaryOutput.title}</h2>
		</header>
		<section class='box-body'>
			{control binaryOutputForm}
		</section>
		{snippetArea binaryOutputWrapper}
            {include 'binaryOutput.latte', data => $binaryOutputData}
		{/snippetArea}
	</div>
	<div class='box box-primary'>
		<header class='box-header with-border'>
			<h2 class='box-title'>{_iqrfnet.standard.sensor.title}</h2>
		</header>
		<section class='box-body'>
			{control sensorForm}
		</section>
		{snippetArea sensorWrapper}
			{include 'sensor.latte', data => $sensorData}
		{/snippetArea}
	</div>
</div>
<div class='col-sm-6'>
	<div class='box box-primary'>
		<header class='box-header with-border'>
			<h2 class='box-title'>{_iqrfnet.standard.light.title}</h2>
		</header>
		<section class='box-body'>
			{control lightForm}
		</section>
		{snippetArea lightWrapper}
			{include 'light.latte', data => $lightData}
		{/snippetArea}
	</div>
	<div class='box box-primary'>
		<header class='box-header with-border'>
			<h2 class='box-title'>{_iqrfnet.standard.dali.title}</h2>
		</header>
		<section class='box-body'>
			<div class='alert alert-warning'>
				{_iqrfnet.standard.dali.warning}
			</div>
            {control daliForm}
		</section>
		{snippetArea daliWrapper}
            {include 'dali.latte', data => $daliData}
		{/snippetArea}
	</div>
</div>
