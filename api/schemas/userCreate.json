{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/iqrf-gateway-webapp-api/schemas/userCreate.json",
	"type": "object",
	"title": "User Creation",
	"additionalProperties": false,
	"required": [
		"username",
		"language",
		"role"
	],
	"properties": {
		"username": {
			"$id": "#/properties/username",
			"type": "string",
			"title": "Username",
			"minLength": 1,
			"example": "iqrf"
		},
		"language": {
			"$id": "#/properties/language",
			"type": "string",
			"title": "Language",
			"enum": ["en"],
			"default": "en",
			"example": "en"
		},
		"role": {
			"$id": "#/properties/role",
			"type": "string",
			"title": "Role",
			"enum": ["normal", "power"],
			"default": "normal",
			"example": "power"
		}
	}
}
