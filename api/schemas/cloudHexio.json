{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/iqrf-gateway-webapp-api/schemas/cloudHexio.json",
	"type": "object",
	"title": "Hexio IoT Platform connection",
	"additionalProperties": false,
	"required": [
		"broker",
		"clientId",
		"topicRequest",
		"topicResponse",
		"username",
		"password"
	],
	"properties": {
		"broker": {
			"$id": "#/properties/broker",
			"type": "string",
			"title": "MQTT broker address",
			"default": "connect.hexio.cloud",
			"example": "connect.hexio.cloud"
		},
		"clientId": {
			"$id": "#/properties/clientId",
			"type": "string",
			"title": "Client ID",
			"example": "IqrfGateway0"
		},
		"topicRequest": {
			"$id": "#/properties/topicRequest",
			"type": "string",
			"title": "Topic for requests",
			"example": "Iqrf/DpaRequest"
		},
		"topicResponse": {
			"$id": "#/properties/topicResponse",
			"type": "string",
			"title": "Topic for responses",
			"example": "Iqrf/DpaResponse"
		},
		"username": {
			"$id": "#/properties/username",
			"type": "string",
			"title": "Username",
			"example": "username"
		},
		"password": {
			"$id": "#/properties/password",
			"type": "string",
			"title": "Password",
			"example": "password"
		}
	}
}
