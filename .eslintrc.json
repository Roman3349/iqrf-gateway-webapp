{
	"env": {
		"browser": true,
		"jquery": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/recommended"
	],
	"parser": "vue-eslint-parser",
	"parserOptions": {
		"ecmaVersion": 2015,
		"sourceType": "module"
	},
	"plugins": [
		"jquery"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-console": [
			"error",
			{
				"allow": [
					"warn",
					"error"
				]
			}
		],
		"vue/html-indent": [
			"warn",
			"tab"
		],
		"vue/html-quotes": [
			"warn",
			"single"
		],
		"vue/max-attributes-per-line": [
			"warn",
			{"singleline": 3}
		]
	}
}
